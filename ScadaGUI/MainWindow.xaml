<Window x:Class="ScadaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SCADA - Main" Height="750" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="List of Tags" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>

            <DataGrid x:Name="dgTags" AutoGenerateColumns="False" Height="350" CanUserAddRows="False" 
                      IsReadOnly="True" SelectionMode="Single" MouseDoubleClick="dgTags_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="4*"/>
                    <DataGridTextColumn Header="IO Address" Binding="{Binding IOAddress}" Width="*"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding DisplayValue}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Content="Add Tag" Width="100" Margin="0,0,10,0" Click="btnAddTag_Click"/>
                    <Button Content="Delete Tag" Width="100" Margin="0,0,10,0" Click="btnDeleteTag_Click"/>
                </StackPanel>

                <Button Content="Report" Width="100" Grid.Column="2" Click="btnReport_Click"/>
            </Grid>

        </StackPanel>
        
        
        <StackPanel Grid.Row="1" Margin="0,-10,0,0">
            <TextBlock Text="Active Alarms" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <DataGrid x:Name="dgLogs" AutoGenerateColumns="False" Height="200" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Tag" Binding="{Binding TagName}" Width="*"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                    <DataGridTextColumn Header="Limit" Binding="{Binding Limit}" Width="*"/>
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="4*"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="*"/>

                    <!-- Action -->
                    <DataGridTemplateColumn Header="Action" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ack"
                            Padding="5,2"
                            Click="btnAckAlarm_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>