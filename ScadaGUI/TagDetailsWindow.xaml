<Window x:Class="ScadaGUI.TagDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Details about a Tag" Height="650" Width="600">

    <DockPanel LastChildFill="True" Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="Details about a Tag" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="txtTagInfo" FontSize="14" Margin="0,0,0,10"/>

                <!-- New value for output -->
                <StackPanel x:Name="forceValue" Visibility="Collapsed" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="New value:" Width="120"/>
                    <TextBox x:Name="txtNewValue" Width="150"/>
                    <Button Content="Force" Margin="10,0,0,0" Click="btnWriteValue_Click"/>
                </StackPanel>

                <!-- Extra properties -->
                <StackPanel x:Name="panelExtraProps" Margin="0,20,0,0">
                    <TextBlock Text="Extra Properties" FontWeight="Bold" Margin="0,0,0,5"/>

                    <!-- Input properties -->
                    <StackPanel x:Name="panelInputProps" Visibility="Collapsed" Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Scan time:" Width="120"/>
                            <TextBox x:Name="txtScanTime" Width="150" LostFocus="txtExtraProp_LostFocus"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="On/Off scan:" Width="120"/>
                            <CheckBox x:Name="chkOnOffScan" Checked="chkExtraProp_Changed" Unchecked="chkExtraProp_Changed"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Analog properties -->
                    <StackPanel x:Name="panelAnalogProps" Visibility="Collapsed" Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Low limit:" Width="120"/>
                            <TextBox x:Name="txtLowLimit" Width="150" LostFocus="txtExtraProp_LostFocus"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="High limit:" Width="120"/>
                            <TextBox x:Name="txtHighLimit" Width="150" LostFocus="txtExtraProp_LostFocus"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Units:" Width="120"/>
                            <TextBox x:Name="txtUnits" Width="150" LostFocus="txtExtraProp_LostFocus"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Output properties -->
                    <StackPanel x:Name="panelOutputProps" Visibility="Collapsed" Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Initial value:" Width="120"/>
                            <TextBox x:Name="txtInitialValue" Width="150" LostFocus="txtExtraProp_LostFocus"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Alarms -->
                <StackPanel x:Name="panelAlarms" Margin="0,20,0,0">
                    <TextBlock Text="Alarms" FontWeight="Bold" Margin="0,20,0,5"/>
                    <ListBox x:Name="lstAlarms" Height="150" SelectionChanged="lstAlarms_SelectionChanged"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <!-- Limit -->
                            <ColumnDefinition Width="100"/>
                            <!-- Type -->
                            <ColumnDefinition Width="*"/>
                            <!-- Message -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Button Save -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Button Delete -->
                        </Grid.ColumnDefinitions>

                        <!-- Limit -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                            <TextBlock Text="Limit" FontWeight="Bold" Margin="0,0,0,2"/>
                            <TextBox x:Name="txtAlarmLimit" Height="28" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Alarm type -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                            <TextBlock Text="Tip" FontWeight="Bold" Margin="0,0,0,2"/>
                            <ComboBox x:Name="cbAlarmType" Height="28" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Above"/>
                                <ComboBoxItem Content="Below"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Message -->
                        <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,10,0">
                            <TextBlock Text="Message" FontWeight="Bold" Margin="0,0,0,2"/>
                            <TextBox x:Name="txtAlarmMessage" Height="28" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Button -->
                        <Button Grid.Column="3" Content="Save" Width="70" Height="28" Padding="10,0" VerticalAlignment="Bottom" Click="btnAddAlarm_Click"/>
                        <Button Grid.Column="4" Content="Delete" Width="70" Height="28" Padding="10,0" Margin="5,0,0,0" VerticalAlignment="Bottom" Click="btnDeleteAlarm_Click"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>